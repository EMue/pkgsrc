 {
   /* turn off inputs (they create an unbelievable amount of noise) and maximize outputs */
   int fd,amp,devmask;
+#ifdef __NetBSD__
+  fd = open("/dev/audio",O_WRONLY,0);
+#else /* !__NetBSD__ */
   fd = open("/dev/dsp",O_WRONLY,0);
+#endif /* __NetBSD__ */
   if (fd == -1) return;
   amp = 0;
   ioctl(fd,SOUND_MIXER_READ_DEVMASK,&devmask);
