+#ifndef INET_ADDRSTR
+#define INET_ADDRSTRLEN			16
+#endif
+
+union sockunion {
+	struct sockinet {
+		u_char si_len;
+		u_char si_family;
+		u_short si_port;
+	} su_si;
+	struct sockaddr_in  su_sin;
+#ifdef INET6
+	struct sockaddr_in6 su_sin6;
+#endif
+};
+#define su_len	su_si.si_len
+#define su_family	su_si.si_family
+#define su_port	su_si.si_port
