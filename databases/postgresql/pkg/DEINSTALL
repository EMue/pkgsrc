#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.2 2000/07/14 04:44:13 jlam Exp $
#

PKGNAME=$1
STAGE=$2

USER=@PGUSER@
PGHOME=@PGHOME@

case ${STAGE} in
DEINSTALL)
	;;
POST-DEINSTALL)
	cat << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, you may want to
remove the \`${USER}' user and the following directories:

	${PGHOME}
===========================================================================
EOF
	;;
*)
	echo "Unexpected argument: $2"
	exit 1
	;;
esac
exit 0
