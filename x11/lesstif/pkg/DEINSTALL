#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.3 2001/07/02 19:58:30 jlam Exp $

PKGNAME=$1
STAGE=$2

LOCALBASE="@LOCALBASE@"
RM="@RM@"
RMDIR="@RMDIR@"
TRUE="@TRUE@"

case ${STAGE} in
DEINSTALL)
	;;

POST-DEINSTALL)
	if [ ${PKG_PREFIX} != ${LOCALBASE} ]
	then
		${RM} -f ${LOCALBASE}/share/aclocal/ac_find_motif.m4
		${RMDIR} -p ${PKG_PREFIX}/share/aclocal 2>/dev/null || ${TRUE}
	fi
	;;

*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
exit 0
