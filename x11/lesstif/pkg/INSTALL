#!/bin/sh
#
# $NetBSD: INSTALL,v 1.3 2001/07/02 19:58:30 jlam Exp $

PKGNAME=$1
STAGE=$2

LOCALBASE="@LOCALBASE@"
LN="@LN@"

case ${STAGE} in
PRE-INSTALL)
	;;

POST-INSTALL)
	if [ ${PKG_PREFIX} != ${LOCALBASE} ]
	then
		${LN} -fs ${PKG_PREFIX}/share/aclocal/ac_find_motif.m4 \
			${LOCALBASE}/share/aclocal/ac_find_motif.m4
	fi
	;;

*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
exit 0
