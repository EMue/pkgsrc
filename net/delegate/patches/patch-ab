+#!/bin/sh
+
+if [ -x __PREFIX__/sbin/delegated ]; then
+	__PREFIX__/sbin/delegated -P8080 \
+	ADMIN=__ADMIN__ \
+	CHARCODE=JIS \
+	CACHEDIR=/var/spool/delegate/cache \
+	EXPIRE=7d \
+	RELIABLE=hostname \
+	> /dev/null 2>&1 && echo -n ' delegated'
+fi
