#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.1 2000/05/02 15:25:18 jlam Exp $

PKGNAME=$1
STAGE=$2

SAMBA_PRIVATE=@SAMBA_PRIVATE@

case ${STAGE} in
DEINSTALL)
	;;
POST-DEINSTALL)
	REQUESTDIR=/var/spool/cups

	cat << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, you may want to remove the
following files:
	
	${SAMBA_PRIVATE}/smbpasswd
===========================================================================
EOF
	;;
*)
	echo "Unexpected argument: $2"
	exit 1
	;;
esac
exit 0
