#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.2 2000/07/12 20:09:40 jlam Exp $

PKGNAME=$1
STAGE=$2

case ${STAGE} in
DEINSTALL)
	;;
POST-DEINSTALL)
	SERVERROOT=/etc/cups
	LOGDIR=/var/log/cups
	REQUESTDIR=/var/spool/cups

	cat << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, you may want to remove the
following directories:

	${SERVERROOT}
	${LOGDIR}
	${REQUESTDIR}
===========================================================================
EOF
	;;
*)
	echo "Unexpected argument: $2"
	exit 1
	;;
esac
exit 0
