If MAN5PAGES is empty, don't punish dumb shells (Hi, Solaris)

--- doc/Makefile.in	1999/06/01 11:12:32	1.1
+++ doc/Makefile.in	1999/06/01 11:20:26
@@ -109,11 +109,11 @@
 		$(man1dir)/`echo $$name | sed '$(transform)'`$(man1ext); \
 	  fi; \
 	done
-	test -z "$(MAN5PAGES)" || \
-	  for name in $(MAN5PAGES); do \
+	for name in "" $(MAN5PAGES); do \
+	    if [ "X$$name" = "X" ]; then continue; fi; \
 	    $(INSTALL_DATA) $(srcdir)/$$name.5 \
 		$(man5dir)/`echo $$name | sed '$(transform)'`$(man5ext); \
-	  done
+	done
 
