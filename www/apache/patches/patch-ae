+API_EXPORT(int)
+ap_include_register_extern(const char *cmd, ap_include_extern_func func) {
+    char cmdbuf[40] = "include::";
+
+    strncat(cmdbuf, cmd, 30);
+    ap_hook_configure(cmdbuf, AP_HOOK_SIG5(int,ptr,ptr,ptr,ptr), AP_HOOK_TOPMOST);
