# Locate words in description, or files in the PLISTs
#
# [-i] == ignore case when searching
# [-f] == look for a file, rather than a word or phrase
# [-p] == use approximate matching
# [-v] == be verbose
#
# Usage: pkglocate [-i] [-p] [-f] [-v] word

#set -x

pkg_info -qe 'glimpse-*' || (echo "Please install the textproc/glimpse package first."; exit 1) || exit 1

approx=""
igncase=""
verbose=no
files='*/pkg/DESCR'
while [ $# -gt 1 ]; do
	case $1 in
	-i)	igncase="-i" ;;
	-f)	files='*/pkg/PLIST*' ;;
	-p)	approx="-p" ;;
	-v)	verbose=yes ;;
	*)	break ;;
	esac
	shift
done

if [ $# -lt 1 ]; then
	echo "Usage: pkglocate [-i] [-f] [-p] word"
	exit 1
fi

for d in *; do
	if [ ! -f $d/pkg/COMMENT ]; then
		# not a valid directory
		continue
	fi
	if [ "$verbose" = "yes" ]; then
		echo "===> Searching category $d"
	fi
	agrep $approx $igncase "$@" $d/$files
done

exit 0
