 	u_char buf[1];
+	ssize_t cnt;
 
 #if 0
 	fcntl(Tty, F_SETFL, fcntl(Tty, F_GETFL, 0)|O_NONBLOCK);
 #endif
-	while (1 == read(fd, buf, 1)) {
+	while (1 == (cnt = read(fd, buf, 1))) {
 		u_char ch = buf[0];
 
 		switch (state) {
@@ -346,6 +351,14 @@
